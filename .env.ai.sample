# AI Agent Configuration for Self-Annealing Scanner

# AI Agent Enable/Disable
AI_AGENT_ENABLED=false  # Set to true to enable AI-powered analysis
AI_PROVIDER=openai  # Options: openai, claude

# OpenAI Configuration
OPENAI_API_KEY=  # Your OpenAI API key (sk-...)
OPENAI_MODEL=gpt-4-turbo  # Options: gpt-4-turbo, gpt-4, gpt-4-turbo-preview
OPENAI_MAX_TOKENS=2000

# Claude (Anthropic) Configuration
ANTHROPIC_API_KEY=  # Your Anthropic API key (sk-ant-...)
CLAUDE_MODEL=claude-3-sonnet-20240229  # Options: claude-3-opus-20240229, claude-3-sonnet-20240229, claude-3-haiku-20240307

# AI Features
AI_AUTO_REMEDIATE=false  # Allow AI to automatically apply fixes
AI_ALLOWED_ACTIONS=increase_timeout,exclude_patterns  # Comma-separated list of allowed remediation actions
AI_LEARNING_ENABLED=true  # Track AI suggestions and outcomes
AI_MAX_COST_PER_SCAN=0.50  # Maximum USD to spend on AI per scan
AI_MIN_CONFIDENCE=0.7  # Minimum confidence (0.0-1.0) to apply remediation
AI_DRY_RUN=false  # If true, only log what would be done without executing
